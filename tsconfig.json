{
  "compilerOptions": {
    "target": "ES2017",
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "noImplicitReturns": true,
    "strict": true,
    "alwaysStrict": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [
      "ES6",
      "esnext.asynciterable"
    ],
    "outDir": "lib/"
  },
  "include": [
    "./src/**/*"
  ]
}
